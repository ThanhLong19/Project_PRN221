@page
@model ProjectPRN221.Pages.Account.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<div style="width: 400px;height:500px;background-color:blanchedalmond;margin: 80px auto;">
    <h3 style="text-align: center;padding: 20px;font-weight:bold;">
        Login
    </h3>
    <div style="margin: 20px 20px; color: red">@TempData["msg"]</div>
    <form method="post">
        <div style="margin: 20px 20px;">
            <label for="email">Email</label>
            <input asp-for="Account.Email" type="text" style="width: 100%"/>
        </div>
        <div style="margin: 20px 20px;">
            <label for="password">Password</label>
            <input asp-for="Account.Password" type="password" style="width: 100%" />
        </div>
        <div style ="margin: 30px 20px;">
            <input type="submit" value="Login" style="width: 100%" class="btn btn-success" />
        </div>
        <div style="margin: 20px 20px;">
            <input type="checkbox" />  Remember me
        </div>
        <div style="margin: 20px 20px;">
            <a asp-area="" asp-page="/Account/ForgotPassword">Forget password?</a>
        </div>
    </form>
</div>