@page
@model ProjectPRN221.Pages.Admin.Order.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["PageTitle"] = "Order Details";
}
<style>
    #content-main-dashboard {
    width: 100%;
    border: 1px solid sandybrown;
}

    #profile-content-order {
        width: 100%;
        border: 1px solid saddlebrown;
        margin: 0px 10px;
        background-color: #fff;
    }

    .profile-order-title {
        padding: 10px;
        border: 1px solid gainsboro;
        width: 97.5%;
        background-color: #f5f5f5;
        display: flex;
    }

    .profile-order-title-left {
        width: 50%;
    }

    .profile-order-title-right {
        width: 50%;
        text-align: right;
        font-weight: bold;
        color: #ee2e24;
    }

    .profile-order-content {
        width: 100%;
        display: flex;
        border-bottom: 1px solid gainsboro;
    }

    .profile-order-content-col1 {
        width: 10%;
        padding-left: 20px;
    }

    .profile-order-content-col2 {
        width: 45%;
    }

    .profile-order-content-col3 {
        width: 15%;
    }

    .profile-order-content-col4 {
        width: 15%;
        text-align: right;
        padding-right: 10px;
    }

    .profile-order-content-col5 {
        width: 15%;
        text-align: right;
        padding-right: 10px;
    }
.content-main {
    width: 100%;
    display: flex;
    margin-bottom: 15px;
    flex-wrap: wrap
}
</style>
<h1 style="text-align:center;font-weight:bold">ORDER DETAIL</h1>
<div class="content-main">
    <div id="content-main-dashboard">
        <div>
            <div class="profile-order-title">
                <div class="profile-order-title-left">
                    <div>Order ID: @Model.order.OrderId</div>
                    <div>Customer's Company Name: @Model.order.Customer.CompanyName</div>
                    <div>Employee's Name: @Model.order.Employee.FirstName @Model.order.Employee.LastName</div>
                    <div>Order Date: @Model.order.OrderDate</div>
                    <div>Required Date: @Model.order.RequiredDate</div>
                    <div>Shipped Date: @Model.order.ShippedDate</div>
                    <div>Freight: $@Model.order.Freight</div>
                    <div>Ship Name: @Model.order.ShipName</div>
                    <div>Ship Address: @Model.order.ShipAddress</div>
                    <div>Ship City: @Model.order.ShipCity</div>
                    <div>Ship Region: @Model.order.ShipRegion</div>
                    <div>Ship Postal Code: @Model.order.ShipPostalCode</div>
                    <div>Ship Country: @Model.order.ShipCountry</div>
                </div>
                <div class="profile-order-title-right">
                    @if (@Model.order.ShippedDate != null)
                    {
                        <span style="color: green;">Completed</span>
                    }
                    else
                    {
                        <span style="color: red;">Pending</span>
                    }
                </div>
            </div>
            @foreach (var o in Model.order.OrderDetails)
            {
                <div class="profile-order-content" style="background-color: white;">
                    <div class="profile-order-content-col2">@o.Product.ProductName</div>
                    <div class="profile-order-content-col3">Quantity: @o.Quantity</div>
                    <div class="profile-order-content-col4">$@o.UnitPrice</div>
                    <div class="profile-order-content-col5">Discount: @(o.Discount * 100)%</div>
                </div>
            }
        </div>
    </div>
</div>