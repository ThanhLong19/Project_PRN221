@page
@model ProjectPRN221.Pages.Cart.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @{
    var orders = Cookies.Class.GetCartInfo(HttpContext);
}


<div style="margin-top:50px;">
    @foreach(var i in orders.Values)
    {
        <div style="background-color:antiquewhite; height:100px; margin-top:10px; display:flex; align-items:center;">
            <div style="width:10%; text-align:center;">
                <img style="height: 80px; width:60px; background-color:aliceblue;" />
            </div>
            <div style="width:30%; margin-left:20px;">
                @i.Product.ProductName
            </div>
            <div style="width:20%;">
                @i.Product.UnitPrice
            </div>
            <div style="width:20%;">
                <form style="margin:0 20px; text-align:center;">
                    <input type='button' value="-" />
                    <input type='text' value="@i.Quantity" style="width:60px; text-align:center;" />
                    <input type='button' value="+" />
                </form>
            </div>
            <div style="width:20%;text-align:center;">
                <input asp-route-id="/Cart/RemoveCart?productId="@i.ProductId"" type="submit" value="Delete" class="btn btn-success" />
            </div>
        </div>
    }
</div>
<div style="margin-top:50px;">
    <h5>
        Total:@ViewBag["TotalAmount"]
    </h5>
    <div>
        <a asp-page="/Cart/Checkout" class="btn btn-success">Checkout</a>
    </div>
</div>
