@page
@model ProjectPRN221.Pages.Orders.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="div_account_profile">
    <div class="div_h">
        <h3>Order Detail</h3>
    </div>
    <div>
        <table class="table" style="margin-top:50px;">
            <tr style="background-color:antiquewhite;">
                <th>Product Name</th>
                <th>Price</th>
               
            </tr>
            @foreach (var od in Model.OrderDetails)
            {
                <tr>
                    <td>@od.Product.ProductName</td>
                    <td>@(od.UnitPrice * od.Quantity)</td>
                </tr>
            }
        </table>
    </div>
    <h3>Total: @Model.TotalPrice</h3>
</div>
